<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.claramonaco.testdislessia">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.faketouch"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@drawable/dsa_logo"
        android:installLocation="auto"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:resizeableActivity="true"
        android:roundIcon="@drawable/dsa_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ErrorView"></activity>
        <activity android:name=".TestAscoltoActivity" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="sensorPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EserciziActivity"
            android:label="@string/Esercizio"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".ImparaTastieraActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:label="@string/Tastiera"
            android:screenOrientation="sensorLandscape"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".TrovaMaxActivity"
            android:label="@string/Trova_MAX"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".InfoAppActivity"
            android:label="@string/Info_app"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".TestDislessiaActivity"
            android:label="@string/Test"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".StatisticheTestActivity"
            android:label="@string/Statistiche_Test"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".PreTest"
            android:label="@string/PreTest"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".PostTest"
            android:label="@string/PostTest"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".IdGroupActivity"
            android:screenOrientation="sensorPortrait" />
    </application>

</manifest>