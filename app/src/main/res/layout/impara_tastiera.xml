<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImparaTastieraActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/edit_text"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/wood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/actual_content"
                        android:layout_alignEnd="@+id/actual_content"
                        android:layout_alignLeft="@+id/actual_content"
                        android:layout_alignRight="@+id/actual_content"
                        android:layout_alignStart="@+id/actual_content"
                        android:layout_alignTop="@+id/actual_content"
                        android:layout_centerInParent="true"
                        android:contentDescription="@string/app_name"

                        android:scaleType="fitXY"
                        android:src="@drawable/wood1" />

                    <LinearLayout
                        android:id="@+id/actual_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <TextView
                            android:id="@+id/lavagna"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="12dip"
                            android:background="@android:color/black"
                            android:ellipsize="end"
                            android:enabled="false"
                            android:gravity="center"
                            android:lines="1"
                            android:maxLines="1"
                            android:padding="@dimen/activity_horizontal_margin"
                            android:singleLine="true"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                    </LinearLayout>

                </RelativeLayout>

                <EditText
                    android:id="@+id/edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="@string/write_word"
                    android:inputType="none|textNoSuggestions"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:singleLine="true"
                    android:textColor="#ff000000"
                    android:textColorHint="#ff000000" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/keyboard_bg"
                android:orientation="vertical"
                android:paddingLeft="2.0dip"
                android:paddingRight="2.0dip"
                android:weightSum="4">

                <LinearLayout
                    android:id="@+id/numbers"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <Button
                        android:id="@+id/num1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/number"
                        android:text="1"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/num2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/number"
                        android:text="2"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/num3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/number"
                        android:text="3"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/num4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/number"
                        android:text="4"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/num5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/number"
                        android:text="5"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/num6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/number"
                        android:text="6"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/num7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/number"
                        android:text="7"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/num8"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/number"
                        android:text="8"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/num9"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/number"
                        android:text="9"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/num0"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/number"
                        android:text="0"
                        android:textColor="@android:color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <Button
                        android:id="@+id/btnQ"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/letter"
                        android:text="Q"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btnW"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/letter"
                        android:text="W"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btnE"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/vocal"
                        android:text="E"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btnR"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/letter"
                        android:text="R"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btnT"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/letter"
                        android:text="T"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btnY"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/letter"
                        android:text="Y"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btnU"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/vocal"
                        android:text="U"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btnI"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/vocal"
                        android:text="I"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btnO"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/vocal"
                        android:text="O"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btnP"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/letter"
                        android:text="P"
                        android:textColor="@android:color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5" />

                    <Button
                        android:id="@+id/btnA"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/vocal"
                        android:text="A"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btnS"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/letter"
                        android:text="S"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btnD"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/letter"
                        android:text="D"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btnF"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/letter"
                        android:text="F"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btnG"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/letter"
                        android:text="G"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btnH"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/letter"
                        android:text="H"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btnJ"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/letter"
                        android:text="J"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btnK"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/letter"
                        android:text="K"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btnL"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/letter"
                        android:text="L"
                        android:textColor="@android:color/white" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5" />

                    <Button
                        android:id="@+id/btnZ"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/letter"
                        android:text="Z"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btnX"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/letter"
                        android:text="X"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btnC"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/letter"
                        android:text="C"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btnV"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/letter"
                        android:text="V"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btnB"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/letter"
                        android:text="B"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btnN"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/letter"
                        android:text="N"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btnM"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/letter"
                        android:text="M"
                        android:textColor="@android:color/white" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <ImageButton
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/activity_vertical_margin"
            android:src="@drawable/ic_menu" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>