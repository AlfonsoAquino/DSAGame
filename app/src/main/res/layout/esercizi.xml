<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#FFBF18"
        android:text="Esercizi"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="30dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bambini4"
        android:scaleX="0.9"
        android:scaleY=".9">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <ListView
                android:id="@+id/list_view_buttom"
                android:layout_width="250dp"
                android:layout_height="280dp"
                android:fadeScrollbars="false"
                android:padding="0dp"
                android:scrollbarStyle="insideInset"
                android:scrollbarTrackVertical="@color/ColorPrimaryDark" />

        </RelativeLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/dsa_logo"
            android:onClick="home" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>