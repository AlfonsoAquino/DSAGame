<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/wood1">

        <Button
            android:id="@+id/livel"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/livel"
            android:paddingBottom="5dp"
            android:text="1"
            android:textSize="20dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFBF18"
            android:padding="10dp">

            <TextView
                android:id="@+id/testo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Trova il massimo"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/punteggio_esatto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/testo1"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="100dp"
                android:background="@drawable/button_press_green"
                android:padding="5dp"
                android:text="0"
                android:textColor="#fff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/punteggio_sbagliato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/testo1"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="100dp"
                android:background="@drawable/button_normal"
                android:padding="5dp"
                android:text="0"
                android:textColor="#fff"
                android:textSize="20dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp">

            <Button
                android:id="@+id/btn_uva"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/uva"
                android:onClick="NumeroMax"
                android:paddingTop="20dp"
                android:scaleX="1.2"
                android:textSize="40dp" />

            <Button
                android:id="@+id/btn_mela"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/btn_uva"
                android:layout_marginEnd="30dp"
                android:background="@drawable/mela"
                android:onClick="NumeroMax"
                android:paddingTop="20dp"
                android:scaleX="1.2"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_pesca"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@id/btn_uva"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="-50dp"
                android:layout_toLeftOf="@id/btn_uva"
                android:background="@drawable/pesca"
                android:onClick="NumeroMax"
                android:paddingTop="20dp"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_melograno"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@id/btn_mela"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="-50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/melorano"
                android:onClick="NumeroMax"
                android:paddingTop="20dp"
                android:textSize="35dp" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>