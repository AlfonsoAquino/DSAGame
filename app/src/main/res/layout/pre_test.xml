<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#223355">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="#FFBF18"
            android:text="Test"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="30dp"
            android:textStyle="bold" />
        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <TextView
                android:layout_marginTop="50dp"
                android:id="@+id/genere"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Genere:"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textAlignment="center"/>
            <FrameLayout
                android:layout_below="@id/genere"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#000"></FrameLayout>

            <RadioGroup
                android:id="@+id/genere_b"
                android:layout_marginLeft="15dp"
                android:layout_below="@id/genere"
                android:layout_marginTop="10dp"
                android:layout_width="200dp"
                android:layout_height="100dp">
                <RadioButton
                    android:onClick="onRadioButtonClickedGenere"
                    android:id="@+id/radio_femmina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Femmina"
                    android:textColor="#fff"
                    android:textSize="30dp"/>
                <RadioButton
                    android:onClick="onRadioButtonClickedGenere"
                    android:id="@+id/radio_maschio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maschio"
                    android:textColor="#fff"
                    android:textSize="30dp"/>
            </RadioGroup>

        </RelativeLayout>


        <RelativeLayout
            android:layout_below="@id/relative1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <TextView
                android:layout_marginTop="50dp"
                android:id="@+id/eta_bambino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Età:"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textAlignment="center"/>
            <FrameLayout
                android:layout_below="@id/eta_bambino"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#000"></FrameLayout>

            <RadioGroup
                android:id="@+id/eta_b"
                android:layout_marginLeft="15dp"
                android:layout_below="@id/eta_bambino"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton
                    android:onClick="onRadioButtonClickedEta"
                    android:id="@+id/radio_menosei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="meno di 6"
                    android:textColor="#fff"
                    android:textSize="30dp"/>
                <RadioButton
                    android:onClick="onRadioButtonClickedEta"
                    android:id="@+id/radio_sei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textColor="#fff"
                    android:textSize="30dp"/>
                <RadioButton
                    android:onClick="onRadioButtonClickedEta"
                    android:id="@+id/radio_sette"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:textColor="#fff"
                    android:textSize="30dp"/>
                <RadioButton
                    android:onClick="onRadioButtonClickedEta"
                    android:id="@+id/radio_otto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:textColor="#fff"
                    android:textSize="30dp"/>
                <RadioButton
                    android:onClick="onRadioButtonClickedEta"
                    android:id="@+id/radio_nove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:textColor="#fff"
                    android:textSize="30dp"/>
                <RadioButton
                    android:onClick="onRadioButtonClickedEta"
                    android:id="@+id/radio_novepiu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="più di 9"
                    android:textColor="#fff"
                    android:textSize="30dp"/>
            </RadioGroup>
            <RelativeLayout
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button

                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_press_orange"
                    android:onClick="test_dislessia"/>

                <Button
                    android:layout_marginLeft="50dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/freccia"
                    android:onClick="test_dislessia"/>
            </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>